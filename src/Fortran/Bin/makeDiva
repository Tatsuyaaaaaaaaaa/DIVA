#!/bin/bash

echo ====================================
echo ====================================
echo ==                                ==
echo ==   Compilation of DIVA Programs ==
echo ==                                ==
echo ====================================
echo ====================================
echo ' '

baseDir=$PWD

_WITH_MESH_=1 ; export _WITH_MESH_

# Compilation of Mesh module
# ==========================

if [ $_WITH_MESH_ == 1 ]
then
cd $divaDir/Mesh
./makeDivaMesh
fi

cd $baseDir

