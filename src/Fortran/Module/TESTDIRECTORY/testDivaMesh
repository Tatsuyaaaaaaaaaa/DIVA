#!/bin/bash



echo ===============================
echo ===============================
echo ==                           ==
echo == Procedure to test : mesh  ==
echo ==                           ==
echo ===============================
echo ===============================
echo ' '

action=eval ; export action

cp ./Mesh/testNode.f95 .

# Chech program : testNode
# -------------------------

fileToCheck=testNode

echo Test : $fileToCheck
echo ------
echo Test : $fileToCheck >> testing.log
echo ------ >> testing.log

$divaDir/compileAndLinkFile $fileToCheck >> testing.log
./$fileToCheck.a >> $fileToCheck.$compiler.$OSused
#cp ./$fileToCheck.$compiler.$OSused ./OUTPUTS/$fileToCheck.$compiler.$OSused
diff -s ./$fileToCheck.$compiler.$OSused ./OUTPUTS/$fileToCheck.$compiler.$OSused >> testing.log

rm ./$fileToCheck.a
rm ./$fileToCheck.$compiler.$OSused

echo ' ' >> testing.log

rm -r testNode.f95
