flag='-O3 -Wall -Wimplicit-none -Wno-unset-vars -Wno-unused-vars -c'

# Definition of preprocessor options if needed
preprocessor='-cpp'
preprocessorFlag='-D=_BATCH_MODE_ '$preproFlag

