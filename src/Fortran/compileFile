libraryDir='-I'$divaModuleLib
#libraryObj=$divaModuleLib/*.o
libraryObj=''

library=$libraryDir' '$associateDir

echo 'Compiling ' $2
$compiler $flag $preprocessor $preprocessorFlag $library $libraryObj $1 -o $2.o

